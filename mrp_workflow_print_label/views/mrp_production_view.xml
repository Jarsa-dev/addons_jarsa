<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="mrp_production_form_view_inherid" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <field name="state" position='replace'>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,in_production,print_label,done" statusbar_colors='{"confirmed":"blue"}'/>
                </field>
                <button name="%(mrp.act_mrp_product_produce)d" position="replace">
                    <field name="produce_button" invisible="1"/>
                    <button name="%(mrp.act_mrp_product_produce)d" string="Produce" type="action" class="oe_highlight" attrs="{'invisible': [('produce_button', '=', True)]}"/>
                </button>
                <button name="button_produce" position="after">
                    <button name="%(mrp_print_label_wizard)d" type="action" string="Print Report" context="{'default_order_id': active_id}" attrs="{'invisible': ['|', ('cloth_type', '=', False),('state', 'not in', ['print_label', 'in_production'])]}"/>
                    <button name="%(mrp_print_label_validate_wizard)d" type="action" string="Reprint Report" attrs="{'invisible' :['|', '|', ('state', '!=', 'done'),('cloth_type','in ',['cover','cloth']),('cloth_type', '=', False)]}" context="{'default_order_id': active_id}"/>
                </button>
                <field name="product_id" position="after">
                    <field name="cloth_type" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
